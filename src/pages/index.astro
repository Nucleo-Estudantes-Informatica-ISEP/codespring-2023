---
import EventObjectives from "@/components/EventObjectives.astro";
import Footer from "@/components/Footer.astro";
import Hero from "@/components/Hero.astro";
import Info from "@/components/info/Info.astro";
import Loading from "@/components/loading/Loading";
import RegisterSection from "@/components/RegisterSection.astro";
import Schedule from "@/components/schedule/Schedule.astro";
import Layout from "@/layouts/Layout.astro";

import "../styles/globals.css";
import "../styles/main.css";

import Faq from "@/components/faq/Faq.astro";
import Stats from "@/components/stats/Stats.astro";
import Content from "@/layouts/Content.astro";
---

<Layout title="CodeSpring 2024">
  <Hero />
  <Content>
    <Schedule />
    <Loading
      title="Act Now, Time is Short"
      day={12}
      month={4}
      year={2024}
      client:load
    />
    <Stats />
    <EventObjectives />
    <Info />
    <Faq />
    <RegisterSection />
  </Content>
  <Footer />
</Layout>
