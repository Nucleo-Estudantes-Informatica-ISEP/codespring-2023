---

<Layout title="CodeSpring 2024 | Home">
  <Hero />
  <Content>
    <Loading
      title="Act Now, Time is Short"
      day={12}
      month={4}
      year={2024}
      client:load
    />
    <Schedule />
    <Stats />
    <EventObjectives />
    <Info />
    <Rules />
    <Awards />
    <Sponsors />
    <JudgeContainer />
    <Faq />
    <ProblemSection />
  </Content>
  <Footer />
</Layout>
